---
import "../global.scss";
import Title from "../components/Title.astro";
import Nav from "../components/Nav.astro";
import Implementations from "../components/Implementations.astro";
import Manifesto from "../components/Manifesto.astro";
import Contact from "../components/Contact.astro";
import Supporters from "../components/Supporters.astro";
import Guidelines from "../components/Guidelines.astro";
import Head from "../components/Head.astro";
import PostHogScript from "../components/PostHogScript.astro";

const title = "Event Destinations Initiative";
const description =
  "A model for event interoperability between event producers and their consumers to favor better developer experience, robust integration, and infrastructural efficiency";
const tags = [
  "event destinations",
  "send webhooks",
  "event delivery",
  "event destinations",
  "event platform",
];
---

<html lang="en">
  <head>
    <Head />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="tags" content={tags.join(",")} />
    <PostHogScript />
  </head>
  <body>
    <Nav />
    <main>
      <div></div>
      <article>
        <div class="draft">
          <br />
          <em class="muted" style="color: red"
            >Note: This version is a draft. Some content is missing and some
            links will 404 untils repo's are made public. Please do not be
            distribute.</em
          >
        </div>
        <section id="manifesto">
          <Title />
          <div class="divider"><h2>Manifesto</h2><hr />01</div>
          <Manifesto />
        </section>
        <section id="guidelines">
          <div class="divider"><h2>Guidelines</h2><hr />02</div>
          <Guidelines />
        </section>
        <section id="implementations">
          <div class="divider"><h2>Implementations</h2><hr />03</div>
          <Implementations />
        </section>
        <section id="supporters">
          <div class="divider"><h2>Supporters</h2><hr />04</div>
          <Supporters />
        </section>
        <section id="contact">
          <div class="divider"><h2>Get Involved</h2><hr />05</div>
          <Contact />
        </section>
      </article>
    </main>
  </body>
</html>

<style>
  main {
    width: 100%;
    padding: var(--spacing-8);
    box-sizing: border-box;
    gap: var(--spacing-8);

    article {
      max-width: 744px;
      margin: 0 auto;
      margin-bottom: var(--spacing-20);
    }

    @media (max-width: 744px) {
      padding: var(--spacing-4);
    }
  }

  .divider {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
    margin-top: var(--spacing-18);
    margin-bottom: var(--spacing-18);
    color: var(--foreground-neutral-3);
    text-transform: uppercase;
    font-size: var(--font-size-xs);
    line-height: var(--font-line-height-xs);
    letter-spacing: var(--font-letter-spacing-xs);
    h2 {
      color: var(--foreground-neutral-3);
      text-transform: uppercase;
      font-size: var(--font-size-xs);
      line-height: var(--font-line-height-xs);
      letter-spacing: var(--font-letter-spacing-xs);
      margin: 0;
      font-weight: normal;
    }
    hr {
      flex: 1;
      height: 8px;
      border: none;
      background: url(/images/hr-bg.svg) 0% 0% / 3px 8px repeat;
    }
  }
</style>
